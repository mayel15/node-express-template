{
  "name": "node-express-template",
  "version": "1.0.0",
  "description": "backend app template with node, express, prisma, ts",
  "main": "dist/app.js",
  "scripts": {
    "start": "tsc && node dist/app.js",
    "test": "jest",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "migrate:db": "npx prisma migrate dev",
    "dev": "dotenv -e ./env/.env.dev concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "swagger": "tsoa spec"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/app.ts"
  },
  "author": "Pape THIAM",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "express": "^4.19.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prisma": "^5.14.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.3",
    "tslint": "^5.20.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "@types/node": "^20.12.12",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsoa": "^6.2.1",
    "tsyringe": "^4.8.0"
  }
}
