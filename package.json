{
  "name": "node-express-template",
  "version": "1.0.0",
  "description": "backend app template with node, express, prisma, ts",
  "main": "dist/app.js",
  "scripts": {
    "start": "tsc && node dist/app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "swagger": "tsoa spec"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/app.ts"
  },
  "author": "Pape THIAM",
  "license": "ISC",
  "devDependencies": {
    "@types/morgan": "^1.9.9",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "express": "^4.19.2",
    "nodemon": "^3.1.0",
    "tslint": "^5.20.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/node": "^20.12.12",
    "dotenv": "^16.4.5",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsoa": "^6.2.1"
  }
}
